<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/font_black_0</item>
        <item name="android:textColorPrimary">@color/color1</item>
        <item name="colorAccent">@color/font_black_0</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- API 19 theme customizations can go here. -->
        <!--<item name="android:windowTranslucentStatus">true</item>-->
        <!--<item name="android:windowTranslucentNavigation">true</item>-->
    </style>

    <style name="my_dialog_style" parent="android:style/Theme.Dialog">

        <item name="android:windowFrame">@null</item><!-- 边框 -->

        <item name="android:windowNoTitle">false</item><!-- 无标题 -->

        <item name="android:windowBackground">@android:color/transparent</item><!-- 自己想要的背景 -->

        <item name="android:windowIsFloating">true</item>

        <item name="android:windowContentOverlay">@null</item>

        <item name="android:windowIsTranslucent">false</item><!-- 半透明 -->

        <item name="android:backgroundDimEnabled">false</item><!-- 模糊 -->

    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="LetterIndexTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">@dimen/side_letter_bar_width</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>


    <style name="hiti_style">
        <item name="android:layout_width">@dimen/base280dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/base18dp</item>
        <item name="android:textColor">#999</item>
        <item name="android:textColorHint">#cacaca</item>
        <item name="android:layout_marginLeft">@dimen/base11dp</item>
    </style>

    <style name="transparentText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#00000000</item>

    </style>

    <style name="ToolBarTitleText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>

    </style>
    <!-- Diakog的样式-->
    <style name="edit_AlertDialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item> <!--是否启用标题栏-->
        <item name="android:background">@color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item> <!--是否使用背景半透明-->
    </style>

    <style name="radio_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#f00</item>
    </style>

    <style name="footer_bar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
    </style>

    <style name="main_footer_bar_radio" parent="footer_bar">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:drawablePadding">1dp</item>
        <item name="android:textColor">#000</item>
    </style>


    <style name="transverse_line">
        <item name="android:layout_width">@dimen/base320dp</item>
        <item name="android:layout_height">@dimen/base1dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">#d8d8d8</item>
    </style>

    <style name="layout_rectangle">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">@dimen/base320dp</item>
        <item name="android:layout_height">@dimen/base35dp</item>
    </style>

    <style name="newstores_text">
        <item name="android:layout_marginLeft">@dimen/base10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">@dimen/base15dp</item>
    </style>

    <style name="new_stores_edtext">
        <item name="android:layout_marginLeft">@dimen/base10dp</item>
        <item name="android:textSize">@dimen/base14dp</item>
        <item name="android:textColor">#999</item>
        <item name="android:textColorHint">#cccccc</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
    </style>

    <style name="update_outlet_edtext" parent="new_stores_edtext">
        <item name="android:textSize">@dimen/base14dp</item>
        <item name="android:textColor">#999</item>
        <item name="android:textColorHint">#cccccc</item>
        <item name="android:layout_marginLeft">@dimen/base25dp</item>
    </style>

    <style name="AppOrderTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
