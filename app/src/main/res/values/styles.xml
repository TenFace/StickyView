<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/font_black_0</item>
        <item name="android:textColorPrimary">@color/color1</item>
        <item name="colorAccent">@color/font_black_0</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- API 19 theme customizations can go here. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="my_dialog_style" parent="android:style/Theme.Dialog">

        <item name="android:windowFrame">@null</item><!-- 边框 -->

        <item name="android:windowNoTitle">false</item><!-- 无标题 -->

        <item name="android:windowBackground">@android:color/transparent</item><!-- 自己想要的背景 -->

        <item name="android:windowIsFloating">true</item>

        <item name="android:windowContentOverlay">@null</item>

        <item name="android:windowIsTranslucent">false</item><!-- 半透明 -->

        <item name="android:backgroundDimEnabled">false</item><!-- 模糊 -->

    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="LetterIndexTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">@dimen/side_letter_bar_width</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

</resources>
